# =============================================================================
# Authentication (public)
# =============================================================================

### Register new admin
POST {{baseUrl}}/api/admin/auth/register
Content-Type: application/json

{
    "email": "admin@example.com",
    "name": "Test Admin",
    "password": "secret123"
}

### Login
POST {{baseUrl}}/api/admin/auth/login
Content-Type: application/json

{
    "email": "admin@example.com",
    "password": "secret123"
}

###

# =============================================================================
# Patients CRUD (requires Bearer token)
# =============================================================================

### Get all patients
GET {{baseUrl}}/api/admin/patients
Authorization: Bearer {{token}}

### Get patient by ID
GET {{baseUrl}}/api/admin/patients/7ea4e6ec-f359-485b-ac99-e0b44c3e18b9
Authorization: Bearer {{token}}

### Create patient
POST {{baseUrl}}/api/admin/patients
Authorization: Bearer {{token}}
Content-Type: application/json

{
    "name": "New Patient"
}

### Update patient
PUT {{baseUrl}}/api/admin/patients/<patient-id>
Authorization: Bearer {{token}}
Content-Type: application/json

{
    "name": "Updated Name"
}

### Delete patient
DELETE {{baseUrl}}/api/admin/patients/<patient-id>
Authorization: Bearer {{token}}

